{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<section class="" id="catching">
    <div class="bg-hero-ben-1 py-5">
        <div class="container py-5">
            <div class="hero my-5">
                <div class="row">
                    <div class="col-12">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    {{ include('component/_navbar.html.twig') }}
<section class="py-5" id="register">
    <div class="container py-5">
        <div class="section section-primary">
            <p class="section-lead">
                Neues Passwort anfordern
            </p>
            <hr class="mb-5">
        </div>
        <div class="row g-5">
            <div class="col-12 col-md-6 offset-md-3">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div class="mb-3">
                        <small>
                            Wir senden Dir eine E-Mail mit Hinweisen zum Setzem Deines neuen Passworts.
                        </small>
                    </div>

                    <button class="btn btn-outline-dark px-5 text-uppercase">Neues Passwort anfordern</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
