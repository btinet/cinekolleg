{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
    {{ include('component/_navbar.html.twig') }}
    <section class="py-5" id="overview">
        <div class="container py-5">
            <h3 class="text-center mb-3">Aktuelle Kurstermine</h3>
            <div class="card">
                <div class="list-group list-group-flush">
                    {% for course in courses %}
                        <a href="#" class="list-group-item list-group-item-action d-flex flex-column py-3">
                            <div class="d-flex gap-3">
                                <img src="{{ asset('build/images/icons/icons8-tuition-32.png') }}" alt="Tutorium" class="flex-shrink-0 d-none d-md-block" width="32" height="32">
                                <div class="d-flex gap-2 w-100 flex-column flex-md-row align-content-md-start justify-content-between">
                                    <div>
                                        <h6 class="mb-0 hero-paragraph fw-bold" style="line-height: 1.2">{{ course.title }}</h6>
                                        <p class="mb-0 opacity-75" style="line-height: 1.2">{{ course.subject }}</p>
                                    </div>
                                    <div class="d-flex flex-column justify-content-start justify-content-md-end">
                                        <small class="opacity-50 text-start text-md-end text-nowrap">{{ course.time|date('H:i') }} Uhr, {{ course.date|ago }}</small>
                                        <small class="d-block text-start text-md-end">{{ course.location }}</small>
                                    </div>
                                </div>
                            </div>

                        </a>
                    {% endfor %}
                </div>
                <div class="card-footer">
                    <p class="mb-0">Es werden nur die zehn letzten Kurse angezeigt.</p>
                </div>
            </div>

        </div>
